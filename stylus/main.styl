@import "nib";
@import "/import/_var.styl";

*::-webkit-input-placeholder
  color: #000
  opacity: 1

*:-moz-placeholder
  color: #000
  opacity: 1

*::-moz-placeholder
  color: #000
  opacity: 1

*:-ms-input-placeholder
  color: #000
  opacity: 1

body input:focus:required:invalid,
body textarea:focus:required:invalid
  color: #000
body input:required:valid,
body textarea:required:valid
  color: #000

//Custom Styles Here
.section-2
  width: 100%
  min-height: 900px
  padding 80px 145px 40px
  clearfix()
  .left-section
    float left
    img
      width 413px
  .right-section
    overflow: auto
    padding 55px 55px 0px 55px
    .top-right-section
      clearfix()
      img
        width 283px
        float left
      .text-container
        padding 15px 70px
        overflow auto
        p
          margin-bottom: 30px
        strong
          max-width: 520px
          display block
          text-align center
          font-size: 20 * $px_em
          line-height 25* $px_em
          font-family: MuseoSans500, sans-serif;
          font-weight: normal;
          letter-spacing: 0.04em
          margin-top: 90px
          margin-left: 40px
    .bottom-right-section
      margin 50px 50px 0 50px
      max-width 800px
      
.section-3
  min-height: 600px
  width 100%
  padding 20px 230px 20px 220px
  clearfix()
  .left-section
    float left
    img
      width: 500px
  .right-section
    overflow: auto
    max-width: 950px;
    padding 180px 10px 10px 80px
    p
      margin-bottom: 30px
    .share-buttons
      margin-top 20px
      a
        display inline-block
        width 25px
        height 25px
        background-repeat: no-repeat;
        background-image: url(../img/share-icons.png);
        background-position:9px 9px
        margin-right: 5px
        background-size: 360%;
        &.vk
          background-position:  -28px 9px
        &.ggl
          background-position:  -67px 9px
.collection
  padding 20px 80px
  min-height 600px
  color $black-color
  h5
    font-family: PlayfairDisplayItalic, sans-serif
    font-size: 33 * $px_em
    margin-top 0
    font-weight: normal
  .item
    text-align: center
    display inline-block
    img
      display: block
      margin 0 auto
      width 100%
    strong
      font-size: 13 *$px_em
      font-family: MuseoSans900, sans-serif
    p
      font-size: 13 *$px_em
      font-family: MuseoSans100, sans-serif
      margin 0
      line-height 1.5

.owl-theme
  .owl-controls
    margin-top: 40px
    .owl-page
      span
        background: $light-black-color
        width 8px
        height: 8px

footer
  border-top 1px solid #e5e5e5
  width 100%
  min-height 480px
  padding: 65px 0 25px
  .wrapper
    margin 0 auto
    width 1600px
    div
      text-align center
      width 530px
      display inline-block
      vertical-align top
      position relative
      height 330px
    .left-footer
      padding-top: 115px
    strong
      font-family: MuseoSans900, sans-serif
      font-size: 13 * $px_em
      font-weight: normal
      text-transform uppercase
    p
      font-size: 12 * $px_em
      margin 0
      margin-top 5px
      line-height 1.5
      .phone
        line-height 2.3
    .center-footer
      //clearfix()
      div
        width 50%
      .left
        padding 85px 10px 0
        float:left
        h5
          @extend .collection h5
          line-height 1.3
          margin 0
      .right
        text-align: left
        paddin-left 5px
        img
          width 200px
    .left-footer:after,.center-footer:after
      content:''
      dislay inline-block
      width 1px
      height 270px
      background-color: #e5e5e5
      position absolute
      bottom 0
      right 0
    .right-footer
      padding-top 65px
      form
        margin-top: 50px
        input, button
          font-family: MuseoSans100, sans-serif;
          font-size: 12 * $px_em
          padding 15px 15px
          text-align center
          outline 1px solid #e5e5e5
          border none
          outline-offset 0px
          letter-spacing 0.07em
          color #606060
          margin-right -3px
          width 215px
          transition .5s all ease
        button
          font-family: MuseoSans700, sans-serif
          color #302f2f;
          text-transform uppercase
          background-color: #e8dadc
          width 100px
        input:active, input:focus
          border none
          outline 1px solid #ffb23a
  .footer-bottom
    margin-top 50px
    clearfix()
    .copyright
      float left
      font-size: 13 *$px_em
      text-transform uppercase
      padding-left 15px
    .footer-menu
      float right
      margin 0
      padding: 0
      li
        list-style none
        display inline-block
        a
          color #606060
          padding 0 12px
          display block
          font-size: 14 *$px_em
          letter-spacing 0.02em
        &:hover, &:active
          text-decoration underline
        

//ALWAYS END
@import "/import/_media.styl";

